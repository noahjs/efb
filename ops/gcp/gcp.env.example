# Copy to ops/gcp/gcp.env and fill values.

# Core project settings
PROJECT_ID=your-gcp-project-id
REGION=us-central1

# Artifact Registry
AR_REPO=efb-api
IMAGE_NAME=efb-api
IMAGE_TAG=latest

# Cloud Run service names
API_SERVICE_NAME=efb-api
WORKER_SERVICE_NAME=efb-worker

# Cloud SQL instance connection name: PROJECT:REGION:INSTANCE
CLOUDSQL_INSTANCE=your-gcp-project-id:us-central1:efb-pg

# Runtime sizing
API_MIN_INSTANCES=0
API_MAX_INSTANCES=10
WORKER_MIN_INSTANCES=1
WORKER_MAX_INSTANCES=1

# Service account used by Cloud Run services
RUN_SERVICE_ACCOUNT=efb-runner@your-gcp-project-id.iam.gserviceaccount.com

# Secret names in Secret Manager (latest versions used)
SECRET_DB_USER=EFB_DB_USER
SECRET_DB_PASS=EFB_DB_PASS
SECRET_DB_NAME=EFB_DB_NAME
SECRET_JWT_SECRET=EFB_JWT_SECRET
# Optional (set to empty to skip)
SECRET_SCRAPINGBEE_API_KEY=EFB_SCRAPINGBEE_API_KEY
SECRET_GOOGLE_CLIENT_ID=EFB_GOOGLE_CLIENT_ID
SECRET_APPLE_BUNDLE_ID=EFB_APPLE_BUNDLE_ID
SECRET_LEIDOS_VENDOR_USER=EFB_LEIDOS_VENDOR_USER
SECRET_LEIDOS_VENDOR_PASS=EFB_LEIDOS_VENDOR_PASS
SECRET_XWEATHER_CLIENT_ID=EFB_XWEATHER_CLIENT_ID
SECRET_XWEATHER_CLIENT_SECRET=EFB_XWEATHER_CLIENT_SECRET
SECRET_OPENAI_API_KEY=EFB_OPENAI_API_KEY

# Optional secrets (set to empty to skip)
SECRET_FIREBASE_SERVICE_ACCOUNT_JSON=EFB_FIREBASE_SERVICE_ACCOUNT_JSON

# Non-secret runtime env
CORS_ORIGINS=https://app.efb.com
FILING_USE_MOCK=false
LEIDOS_BASE_URL=https://lmfsweb.afss.com/Website/rest
GCS_BUCKET=mobile-efb-prod
GCS_ATIS_BUCKET=efb-atis-prod
